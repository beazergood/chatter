{
  "name": "le-chat-app",
  "version": "1.0.0",
  "description": "a simple server chat app using native web sockets",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "build": "babel --delete-dir-on-start --out-dir dist --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored src",
    "start:dev": "nodemon dist/index.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\""
  },
  "author": "Dave Beazer",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/ws": "^8.2.1",
    "concurrently": "^6.4.0",
    "typescript": "^4.5.2"
  }
}
